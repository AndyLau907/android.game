<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTrans"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="游戏结束"
            android:textColor="#000000"
            android:textSize="60sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/game1_gameover_high_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="最高记录:200000"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/game1_gameover_score_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="你的分数:200000"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/game1_gameover_newhigh_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="刷新纪录"
            android:textColor="#ff0000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/game1_gameover_restart_btn"
            android:layout_width="wrap_content"
            android:transitionName="game1"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorTrans"
            android:gravity="center"
            android:text="再来一局"
            android:textColor="#6495ed"
            android:textSize="20sp" />

        <Button
            android:id="@+id/game1_gameover_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorTrans"
            android:gravity="center"
            android:text="返回主界面"
            android:textColor="#6495ed"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>